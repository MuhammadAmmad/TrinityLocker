<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:layout_width="592dp"
            android:layout_height="100dp"
            app:srcCompat="@mipmap/ic_app_logo"
            android:id="@+id/imageView2"
            tools:ignore="ContentDescription"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.54" />

    <TextView
            android:text="@string/welcomeScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/welcomeTx"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

    <TextView
            android:text="@string/description_slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sloganTx"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/welcomeTx"
            app:layout_constraintVertical_bias="0.09"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:textStyle="normal|italic"
            android:textAllCaps="false" />

    <TextView
            android:text="@string/signInScreenAccept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signInAcceptNotice"
            app:layout_constraintTop_toBottomOf="@+id/sloganTx"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.75"
            android:layout_marginTop="16dp"
            android:textStyle="normal|bold" />

    <TextView
            android:text="@string/signInNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signInAcceptDisclaimer"
            app:layout_constraintLeft_toLeftOf="@+id/signInAcceptNotice"
            app:layout_constraintRight_toRightOf="@+id/signInAcceptNotice"
            app:layout_constraintTop_toBottomOf="@+id/signInAcceptNotice"
            app:layout_constraintHorizontal_bias="0.0"
            android:textSize="12sp"
            android:textStyle="normal|italic"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="4dp" />

    <com.google.android.gms.common.SignInButton
            android:id="@+id/google_sign_in_button"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintHorizontal_bias="0.37"
            app:layout_constraintVertical_bias="1.0"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/signInAcceptDisclaimer" />

</android.support.constraint.ConstraintLayout>